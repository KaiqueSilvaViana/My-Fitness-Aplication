<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/constraint_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="8dp">

        <!--Para que a celula nÃ§ao preencha a tela toda coloque: android:layout_height="wrap_content" se adaptar ao conteudo-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_register"
            android:background="@drawable/button_form"
            style="@style/button_style_form_item"
            android:drawableLeft="@drawable/balance_icon"
            android:drawableRight="@drawable/arrow_icon_white"
            android:text="@string/imc_button"
            android:textAlignment="textStart"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>